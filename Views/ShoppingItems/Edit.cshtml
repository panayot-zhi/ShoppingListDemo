@model ShoppingListDemo.Data.ShoppingItem

@{
    ViewData["Title"] = "Редакция на продукт";
}

<h1>@ViewData["Title"]</h1>

<h4>Продукт</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingCategoryId" class="control-label"></label>
                <select asp-for="ShoppingCategoryId" class="form-control" asp-items="ViewBag.ShoppingCategoryId"></select>
                <span asp-validation-for="ShoppingCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запис" class="btn btn-primary" /> |
                <a asp-action="Index">Назад към списък</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
