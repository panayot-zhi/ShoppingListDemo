@model ShoppingListDemo.Data.ShoppingItem

@{
    ViewData["Title"] = "Преглед на продукт";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShoppingCategory)
